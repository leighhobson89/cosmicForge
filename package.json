{
  "$schema": "https://json.schemastore.org/package",
  "name": "cosmic-forge",
  "version": "1.0.0",
  "description": "An Electron sandbox for forging stellar civilizations.",
  "author": {
    "name": "Leigh Hobson",
    "email": "leigh@cosmicforge.dev"
  },
  "main": "main.js",
  "type": "module",
  "build": {
    "appId": "net.leighhobson.cosmicforge",
    "mac": {
      "target": "zip",
      "category": "public.app-category.games",
      "icon": "icons/app.icns"
    },
    "win": {
      "target": "portable",
      "icon": "icons/app.ico"
    },
    "linux": {
      "target": "zip",
      "icon": "icon.png"
    },
    "portable": {
      "unicode": false,
      "artifactName": "Cosmic Forge.exe"
    },
    "files": [
      "index.html",
      "main.js",
      "package.json",
      "styles.css",
      "*.png",
      "*.js",
      "images/**/*",
      "sounds/**/*",
      "resources/**/*",
      "production_resources/**/*",
      "*.json",
      "*.md",
      "icons/*.*"
    ]
  },
  "scripts": {
    "start": "electron .",
    "save-inspector": "node tools/save-inspector/server.mjs",
    "analytics-dashboard": "node tools/analytics-dashboard/server.mjs",
    "build-icons": "mkdir -p icons && icon-gen -i icon.png -o icons",
    "build:mac": "bun run build-icons && electron-builder --mac --universal -c.mac.identity=null --publish never",
    "build:win": "bun run build-icons && electron-builder --win",
    "build:linux": "bun run build-icons && electron-builder --linux",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:smoke": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests",
    "test:playwright": "playwright test",
    "test:allure": "npm run test && npm run test:playwright && allure generate allure-results --clean -o allure-report",
    "test:autobuyer": "npm test -- tests/autobuyer.test.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/bun": "latest",
    "@types/electron": "latest",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "debug": "^4.3.4",
    "electron": "latest",
    "electron-builder": "latest",
    "icon-gen": "latest",
    "jest": "^29.7.0",
    "jest-allure2": "^1.2.3",
    "jest-html-reporters": "^3.1.7",
    "playwright": "^1.41.2"
  },
  "private": true
}
